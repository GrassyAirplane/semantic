{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Semantic",
  "scopeName": "source.semantic",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#block-types" },
    { "include": "#field-keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#list-items" },
    { "include": "#types" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.semantic",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.semantic",
          "match": "//.*$"
        },
        {
          "name": "comment.block.semantic",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.semantic",
          "match": "@(meta|imports|definitions|program|end)\\b"
        }
      ]
    },
    "block-types": {
      "patterns": [
        {
          "name": "keyword.declaration.function.semantic",
          "match": "@function\\b"
        },
        {
          "name": "keyword.declaration.structure.semantic",
          "match": "@structure\\b"
        },
        {
          "name": "keyword.declaration.flow.semantic",
          "match": "@flow\\b"
        },
        {
          "name": "keyword.declaration.repeat.semantic",
          "match": "@repeat\\b"
        },
        {
          "name": "keyword.declaration.safely.semantic",
          "match": "@safely\\b"
        },
        {
          "name": "keyword.declaration.error.semantic",
          "match": "@error\\b"
        },
        {
          "name": "keyword.declaration.constant.semantic",
          "match": "@constant\\b"
        }
      ]
    },
    "field-keywords": {
      "patterns": [
        {
          "name": "entity.name.tag.semantic",
          "match": "\\b(purpose|accepts|returns|steps|edge_cases|properties|constraints|behaviors)::"
        },
        {
          "name": "entity.name.tag.semantic",
          "match": "\\b(when|then|else|for|each|in|from|to|by|while|until|if|unless|and|or|not|is|has|with|as|of)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.semantic",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.semantic",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.semantic",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.semantic",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.semantic",
          "match": "\\b-?\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.semantic",
          "match": ":="
        },
        {
          "name": "keyword.operator.arrow.semantic",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.comparison.semantic",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.semantic",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.logical.semantic",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.range.semantic",
          "match": "\\.\\."
        }
      ]
    },
    "list-items": {
      "patterns": [
        {
          "name": "markup.list.numbered.semantic",
          "match": "^\\s*\\d+\\."
        },
        {
          "name": "markup.list.unnumbered.semantic",
          "match": "^\\s*[*-]\\s"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.semantic",
          "match": "\\b(String|Number|Integer|Float|Boolean|List|Map|Set|Any|None|Void|Optional|Result|Error)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.semantic",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    }
  }
}
